#include<stdio.h>

int main(){
    int num, firstDigit, lastDigit,sum;


    printf("Enter a number: ");
    scanf("%d", &num);


    lastDigit = num % 10;


    firstDigit = num;
    while (firstDigit >= 10){
        firstDigit = firstDigit / 10;
    }
      sum=firstDigit+lastDigit;

        printf("sum of last and first number is: %d \n", sum);

}
